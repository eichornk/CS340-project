<div class="margins">

    <h2> Councils </h2>

    {{!-- Create a table --}}
    <table class="council_table">

        {{!-- Header section --}}
        <thead>

            {{!-- For just the first row, we print each key of the row object as a header cell so we
            know what each column means when the page renders --}}
            <tr>
                {{#each data.[0]}}
                <th>
                    {{@key}}
                </th>
                {{/each}}
            </tr>
        </thead>

        {{!-- Body section --}}
        <tbody>

            {{!-- For each row, print the chapter philanthropy id, philanthropy role, event id, and chapter id in order --}}
            {{#each data}}
            <tr data-value={{this.council_id}}>
                <td>{{this.council_id}}</td>
                <td>{{this.council_name}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <div class="form_margins">

        <h3>Adding a New Council</h3>
        <p>To add a new council, please enter their information below and click 'Submit'!</p>

        <form id="add-council-form-ajax">

            <label for="input-council-name">Council Name: </label>
            <input type="text" name="input-council-name" id="input-council-name">

            <input class="orange_button" type="submit">
        </form>
    </div>
</div>

<script src="./js/add_councils.js"></script>